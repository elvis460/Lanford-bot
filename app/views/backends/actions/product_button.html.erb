<%=render partial: 'navbar'%>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
          Button Table
      </header>
      <table class="table table-striped table-advance table-hover">
        <thead>
          <tr>
            <th class="col-md-2"><i class=" fa fa-edit"></i>ButtonType</th>
            <th class="col-md-2"><i class="fa fa-bullhorn"></i>Title</th>
            <th class="col-md-2"><i class="fa  fa-code-fork"></i>Url</th>
            <th class="col-md-2"><i class="fa fa-flash"></i>觸發動作</th>
            <th class="col-md-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @product_buttons.each do |btn|%>
            <tr>
              <td class="col-md-2" style="text-align: center"><span class="label <%= btn.button_type == 'web_url'? 'label-primary' : 'label-success' %>"><%=btn.button_type%></span></td>
              <td class="col-md-2"><a href="#"><%=btn.title%></a></td>
              <td class="col-md-2" style="word-break: break-word"><%=btn.url%></td>
              <td class="col-md-2" style="text-align: center"><span class="label label-warning  label-mini"><%=btn.payload%></span></td>
              <td class="col-md-2">
                <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
              </td>
            </tr>
          <%end%>  
        </tbody>
      </table>
    </section>
  </div>
</div>